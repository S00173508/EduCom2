@section scripts {
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        function addPostHtml(shapeModel) {
            var postHtml = ` <li class="post" id=${shapeModel.Id}>
<h3 id="cardid" style="display:none">${shapeModel.Id}</h3>
<h4 id="name"> ${shapeModel.Name}</h4>
<p id="post">${shapeModel.Post}</p>
</div>
</li>`;
            $("#servicesContainer").append(postHtml);
        }

        function addNewPost() {
            //var bd = 1;
            //var id = 0;
            var name = $("#Name").val();
            var post = $("#Post").val();
            // var id;
            var newPost = { Id: 0, Name: name, Post: post };

            addPostHtml(newPost);
            // AddCardSignal(newCard);
            addPostHub.server.addNewShape(newPost);
        }

        $(document).ready(function () {

            addPostHub = $.connection.addShapeHub;

            addPostHub.client.newShapeAdded = function (shapeModel) {

                addPostHtml(shapeModel);
            };

            $.connection.hub.start().done(function () {
                addPostHub.server.firstHandShake();
            });
        });


        //HttpResponseMessage webResponse = webClient.GetAsync("http://localhost:64135/api/EduCom/getAllTopics/").Result;
       // HttpResponseMessage webResponse = GlobalVariables.WebApiClient.GetAsync("getAllTopics").Result;

       var uri = 'http://localhost:64135/api/EduCom/getAllTopics/';
        // var uri = GlobalVariables.("getAllTopics");

        function clearList() {
            $('#class-list').empty();
        }

        function getTopics() {
            clearList();

            $.getJSON(uri).done(function (data) {
                $.each(data, function (key, item) {
                    $('<li>', { text: item.ID + ' : ' + item.TopicName }).appendTo($('#class-list'));
                });
            });
        }
    </script>
}
<div class="container">
